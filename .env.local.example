# Development Environment Variables
# Copy to .env.local and customize for your local setup
#
# Key difference from production:
# - Use "localhost" for service URLs (not Docker service names)
# - Database connects to localhost (services run in Docker, Next.js runs on host)

# --- System-Profiler ---
SYSTEM_PROFILER_BASE_URL=http://localhost:8787

# --- Database ---
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydatabase

# Next.js runtime DB (localhost since Next.js runs on host in dev)
DATABASE_URL=postgres://myuser:mypassword@localhost:5432/mydatabase

# Drizzle CLI / Studio
DATABASE_URL_EXTERNAL=postgres://myuser:mypassword@localhost:5432/mydatabase


# --- Auth ---
NEXTAUTH_URL=http://localhost:3000
AUTH_SECRET= # Generate with: npx auth secret


# --- OAuth ---
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=


# --- Image handling ---
# server-to-server (Next -> validator)
# Dev: localhost since Next.js runs on host
PUBLIC_IMG_VALIDATOR_BASE_URL=http://localhost:8000

# server-only filesystem path
# Dev: local filesystem (not in container)
IMG_UPLOAD_DIR=./.data/uploads/images


# --- Demo ---
SECRET_KEY=example-secret-dev
NEXT_PUBLIC_SAFE_KEY=example-public-dev
