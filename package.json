{
  "private": true,
  "scripts": {
    "dev": "npm run db:migrate && next dev --turbopack",
    "build": "next build && npm run postbuild",
    "postbuild": "node scripts/prepare-standalone.js",
    "start": "node server.js",
    "dev:services": "docker compose --env-file .env.local -p pi_site_dev -f docker-compose.dev.yml up -d",
    "dev:services:stop": "docker compose -p pi_site_dev -f docker-compose.dev.yml down --remove-orphans",
    "dev:services:logs": "docker compose -p pi_site_dev -f docker-compose.dev.yml logs -f",
    "staging:services": "docker compose --env-file .env.staging -p pi_site_staging -f docker-compose.staging.yml up -d --build",
    "staging:services:stop": "docker compose -p pi_site_staging -f docker-compose.staging.yml down --remove-orphans",
    "staging:services:logs": "docker compose -p pi_site_staging -f docker-compose.staging.yml logs -f",
    "staging:services:reset": "docker compose -p pi_site_staging -f docker-compose.staging.yml down -v --remove-orphans",
    "fz-logs": "./scripts/logs-fzf.sh",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "node scripts/run-migrations.js",
    "db:studio": "drizzle-kit studio",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-toast": "^1.2.15",
    "autoprefixer": "^10.4.23",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "culori": "^4.0.2",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.45.1",
    "lodash.shuffle": "^4.2.0",
    "lucide-react": "^0.562.0",
    "next": "^15.5.9",
    "next-auth": "^4.24.13",
    "postgres": "^3.4.5",
    "react": "19.0.0",
    "react-confetti": "^6.4.0",
    "react-dom": "19.0.0",
    "react-spinners": "^0.17.0",
    "tailwind-merge": "^3.4.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "drizzle-kit": "^0.31.8",
    "@types/culori": "^4.0.1",
    "@types/lodash.shuffle": "^4.2.9",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/uuid": "^10.0.0",
    "chalk": "^5.4.1",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "tailwindcss": "^4.1.18",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.7.2"
  }
}
