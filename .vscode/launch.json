{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to PM2",
      "port": 9229,
      "address": "127.0.0.1",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/.next/standalone/**/*.js",
        "${workspaceFolder}/.next/server/**/*.js"
      ],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///*": "*"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Standalone Server",
      "runtimeExecutable": "node",
      "runtimeArgs": ["--inspect=0.0.0.0:9229", "server.js"],
      "cwd": "${workspaceFolder}/.next/standalone",
      "env": {
        "NODE_ENV": "production"
      },
      "envFile": "${workspaceFolder}/.env",
      "console": "integratedTerminal",
      "sourceMaps": true,
      "outFiles": [
        "${workspaceFolder}/.next/standalone/**/*.js",
        "${workspaceFolder}/.next/server/**/*.js"
      ],
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///*": "*"
      }
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Debug Server",
      "port": 9229,
      "address": "127.0.0.1",
      "restart": true,
      "skipFiles": ["<node_internals>/**"],
      "sourceMaps": true,
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ],
      "outFiles": [
        "${workspaceFolder}/.next/standalone/**/*.js",
        "${workspaceFolder}/.next/server/**/*.js"
      ],
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}",
      "sourceMapPathOverrides": {
        "webpack:///./*": "${workspaceFolder}/*",
        "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
        "webpack:///*": "*"
      }
    }
  ]
}
